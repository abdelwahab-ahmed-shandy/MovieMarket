@section Scripts
{
<script>
    $(document).ready(function () {
        // Read the data stored in TempData and remove the extra spaces
        var message = '@TempData["Message"]'.trim();
        var messageType = '@TempData["MessageType"]'.trim();

        // Check if there is an actual message to be displayed
        if (message && message !== 'null' && message !== 'undefined' && message !== '') {
            // Determine the message type based on its value in TempData
            switch (messageType.toLowerCase()) {
                case 'success': // If the message indicates a successful operation
                    toastr.success(message, 'Success');
                    break;
                case 'error': // If the message indicates an error
                    toastr.error(message, 'Error');
                    break;
                case 'warning': // If the message is a warning
                    toastr.warning(message, 'Warning');
                    break;
                default: // Any other status is displayed as public information
                    toastr.info(message, 'Notice');
            }
        }
    });
</script>
}

@{
    ViewData["Title"] = "Reset Link Sent - MovieMart";
}

<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden text-center">
                <!-- Card Header with Gradient Background -->
                <div class="card-header bg-gradient-primary-to-secondary text-white py-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-envelope-check fs-1 me-3"></i>
                        <div>
                            <h2 class="mb-0 text-center fw-bold">Reset Link Sent</h2>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">
                    <div class="alert alert-success mb-4">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        We've sent a password reset link to your email address. Please check your inbox.
                    </div>

                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        If you don't see the email, please check your spam folder or
                        <a asp-action="ForgetPassword">try again</a>.
                    </div>

                    <div class="d-grid">
                        <a asp-action="Login" class="btn btn-outline-primary rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
