@model MovieMart.Models.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register - MovieMart";
}

<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Card Header with Gradient Background -->
                <div class="card-header bg-gradient-primary-to-secondary text-white py-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-film fs-1 me-3"></i>
                        <div>
                            <h2 class="mb-0 text-center fw-bold">Join MovieMart</h2>
                            <p class="mb-0 text-center opacity-75">Create your account to get started</p>
                        </div>
                    </div>
                </div>
                
                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">
                    <!-- Registration Form -->
                    <form asp-action="Register" id="registerForm" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row">
                            <!-- First Name -->
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" required />
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <div class="invalid-feedback">
                                        Please enter your first name
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" required />
                                    <label asp-for="LastName" class="form-label"></label>
                                    <div class="invalid-feedback">
                                        Please enter your last name
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                                <label asp-for="Address" class="form-label"></label>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="UserName" class="form-control" placeholder="Username" required />
                                <label asp-for="UserName" class="form-label"></label>
                                <div class="invalid-feedback">
                                    Please choose a username
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Email" type="email" class="form-control" 
                                       placeholder="name@example.com" />
                                <label asp-for="Email" class="form-label"></label>
                                <div class="invalid-feedback">
                                    Please enter a valid email address
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-3 position-relative">
                            <div class="form-floating">
                                <input asp-for="Password" type="password" class="form-control" 
                                       placeholder="Password" required
                                       minlength="6" id="passwordField" />
                                <label asp-for="Password" class="form-label"></label>
                                <button type="button" class="btn btn-sm btn-link position-absolute end-0 top-50 translate-middle-y me-2 password-toggle">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                                <div class="invalid-feedback">
                                    Password must be at least 6 characters
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="progress mt-2" style="height: 5px;">
                                <div id="passwordStrength" class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                            <small id="passwordHelp" class="form-text text-muted"></small>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4 position-relative">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" 
                                       placeholder="Confirm Password" required
                                       minlength="6" />
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <button type="button" class="btn btn-sm btn-link position-absolute end-0 top-50 translate-middle-y me-2 password-toggle">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                                <div class="invalid-feedback">
                                    Passwords must match
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold py-3">
                                <span class="submit-text">
                                    <i class="bi bi-person-plus me-2"></i> Create Account
                                </span>
                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                    </form>

                    <!-- Login Link -->
                    <div class="text-center mb-4">
                        <p class="text-muted mb-2">Already have an account?</p>
                        <a asp-area="Identity" asp-controller="Account" asp-action="Login"
                           class="btn btn-outline-primary rounded-pill px-4">
                            Sign in instead
                        </a>
                    </div>

                    <!-- Social Login Divider -->
                    <div class="position-relative my-4">
                        <hr class="border-2">
                        <div class="position-absolute top-50 start-50 translate-middle bg-white px-3">
                            <span class="text-muted small">OR REGISTER WITH</span>
                        </div>
                    </div>


                    <!-- Social Login Buttons -->
                    <div class="row justify-content-center">
                        <!-- Google Login -->
                        <div class="col-md-6 d-flex justify-content-center">
                            <form asp-action="ExternalLogin" asp-controller="Account" method="post" class="w-100" style="max-width: 300px;">
                                <input type="hidden" name="provider" value="Google" />
                                <input type="hidden" name="returnUrl" value="/" />
                                <button type="submit" class="btn btn-outline-danger w-100 rounded-pill py-2">
                                    <i class="fab fa-google me-2"></i> Google
                                </button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

@section Styles {
    <style>
        /* Password Strength Indicator */
        .progress {
            background-color: #e9ecef;
        }
        
        .progress-bar-weak {
            background-color: #dc3545;
        }
        
        .progress-bar-medium {
            background-color: #fd7e14;
        }
        
        .progress-bar-strong {
            background-color: #28a745;
        }
        
        /* Custom Styles Matching Login Page */
        .bg-gradient-primary-to-secondary {
            background: linear-gradient(135deg, #6c5ce7 0%, #fd79a8 100%);
        }
        
        .password-toggle {
            z-index: 5;
            color: var(--bs-secondary);
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(108, 92, 231, 0.25);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Password toggle functionality
            $('.password-toggle').click(function() {
                const passwordInput = $(this).siblings('input');
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye-fill').addClass('bi-eye-slash-fill');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye-slash-fill').addClass('bi-eye-fill');
                }
            });

            // Password strength indicator
            $('#passwordField').on('input', function() {
                const password = $(this).val();
                const strengthBar = $('#passwordStrength');
                const helpText = $('#passwordHelp');
                
                // Reset
                strengthBar.removeClass('progress-bar-weak progress-bar-medium progress-bar-strong');
                
                if (password.length === 0) {
                    strengthBar.css('width', '0%');
                    helpText.text('');
                    return;
                }
                
                // Calculate strength
                let strength = 0;
                if (password.length >= 6) strength += 1;
                if (password.length >= 8) strength += 1;
                if (/[A-Z]/.test(password)) strength += 1;
                if (/[0-9]/.test(password)) strength += 1;
                if (/[^A-Za-z0-9]/.test(password)) strength += 1;
                
                // Update UI
                if (strength <= 2) {
                    strengthBar.css('width', '33%').addClass('progress-bar-weak');
                    helpText.text('Weak password').removeClass().addClass('text-danger');
                } else if (strength <= 4) {
                    strengthBar.css('width', '66%').addClass('progress-bar-medium');
                    helpText.text('Medium strength').removeClass().addClass('text-warning');
                } else {
                    strengthBar.css('width', '100%').addClass('progress-bar-strong');
                    helpText.text('Strong password').removeClass().addClass('text-success');
                }
            });

            // Form validation
            (function() {
                'use strict';
                
                const form = document.getElementById('registerForm');
                const passwordInput = document.getElementById('passwordField');
                const confirmPasswordInput = document.querySelector('input[name="ConfirmPassword"]');
                
                // Custom confirm password validation
                confirmPasswordInput.addEventListener('input', function() {
                    if (confirmPasswordInput.value !== passwordInput.value) {
                        confirmPasswordInput.setCustomValidity("Passwords must match");
                    } else {
                        confirmPasswordInput.setCustomValidity("");
                    }
                });
                
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        // Show loading spinner
                        const submitBtn = form.querySelector('button[type="submit"]');
                        submitBtn.querySelector('.submit-text').classList.add('d-none');
                        submitBtn.querySelector('.spinner-border').classList.remove('d-none');
                        submitBtn.disabled = true;
                    }
                    
                    form.classList.add('was-validated');
                }, false);
            })();

            // Toastr notifications
            var message = '@TempData["notification"]'.trim();
            var messageType = '@TempData["MessageType"]';

            if (message && message !== 'null' && message !== 'undefined' && message !== '') {
                messageType = messageType ? messageType.trim().toLowerCase() : 'info';
                
                const toastrOptions = {
                    closeButton: true,
                    progressBar: true,
                    positionClass: "toast-top-center",
                    timeOut: 5000,
                    extendedTimeOut: 2000
                };

                switch (messageType) {
                    case 'success':
                        toastr.success(message, 'Success', toastrOptions);
                        break;
                    case 'error':
                        toastr.error(message, 'Error', toastrOptions);
                        break;
                    case 'warning':
                        toastr.warning(message, 'Warning', toastrOptions);
                        break;
                    default:
                        toastr.info(message, 'Information', toastrOptions);
                }
            }
        });
    </script>
}