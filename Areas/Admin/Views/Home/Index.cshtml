                        <div class="card user-management-card bg-secondary text-white h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-wrapper bg-secondary-light rounded-circle me-3">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <h5 class="card-title mb-0">Customers</h5>
                                </div>
                                <p class="card-text text-muted-light mb-4">
                                    Manage all customer accounts and profiles.
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/Admin/Customers/AllCustomers" class="btn btn-sm btn-outline-light">
                                        <i class="fas fa-users me-1"></i> View All
                                    </a>
                                    <a href="/Admin/Customers/Create" class="btn btn-sm btn-light text-secondary">
                                        <i class="fas fa-plus me-1"></i> Add New
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-people me-1"></i>
            Recent Subscribers
        </div>
        <div class="card-body">
            <ul class="list-group">
                @foreach (var subscriber in Model.RecentSubscribers)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @subscriber.Email
                        <span class="badge bg-secondary">@subscriber.SubscribedAt.ToString("yyyy-MM-dd")</span>
                    </li>
                }
            </ul>
        </div>
    </div>


    <!-- Orders Management Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="fas fa-bag-shopping me-2 text-primary"></i>Orders Management
            </h5>
            <button class="btn btn-sm btn-outline-primary">
                <i class="fas fa-chart-line me-1"></i> Reports
            </button>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <!-- All Orders Card -->
                <div class="col-xl-4 col-md-6">
                    <div class="card order-card bg-white h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-wrapper bg-primary bg-opacity-10 text-primary rounded-circle me-3">
                                    <i class="fas fa-list"></i>
                                </div>
                                <h5 class="card-title mb-0">All Orders</h5>
                            </div>
                            <p class="card-text text-muted mb-4">
                                View and manage all customer orders in the system.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/Admin/Order/AllOrders" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye me-1"></i> View Orders
                                </a>
                                <span class="badge bg-primary bg-opacity-10 text-primary">1,248 total</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Track Orders Card -->
                <div class="col-xl-4 col-md-6">
                    <div class="card order-card bg-white h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-wrapper bg-success bg-opacity-10 text-success rounded-circle me-3">
                                    <i class="fas fa-truck"></i>
                                </div>
                                <h5 class="card-title mb-0">Track Orders</h5>
                            </div>
                            <p class="card-text text-muted mb-4">
                                Monitor order status and update shipping information.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/Admin/Order/TrackOrders" class="btn btn-sm btn-success">
                                    <i class="fas fa-location-dot me-1"></i> Track
                                </a>
                                <span class="badge bg-success bg-opacity-10 text-success">32 in transit</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cancel Requests Card -->
                <div class="col-xl-4 col-md-6">
                    <div class="card order-card bg-white h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-wrapper bg-danger bg-opacity-10 text-danger rounded-circle me-3">
                                    <i class="fas fa-circle-xmark"></i>
                                </div>
                                <h5 class="card-title mb-0">Cancel Requests</h5>
                            </div>
                            <p class="card-text text-muted mb-4">
                                Review and process customer cancellation requests.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/Admin/Order/CancelRequests" class="btn btn-sm btn-danger">
                                    <i class="fas fa-clipboard-list me-1"></i> Review
                                </a>
                                <span class="badge bg-danger bg-opacity-10 text-danger">14 pending</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="fas fa-history me-2 text-primary"></i>Recent Activity
            </h5>
            <button class="btn btn-sm btn-outline-primary" onclick="location.reload()">
                <i class="fas fa-sync-alt me-1"></i> Refresh
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Time</th>
                            <th>Users</th>
                            <th>Action</th>
                            <th>Details</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <tr>
                                <td>@activity.Timestamp.ToString("g")</td>
                                <td>@(activity.User?.Email ?? "System")</td>
                                <td>@activity.Action</td>
                                <td>@activity.Details</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(activity.Status)">
                                        @activity.Status.ToString()
                                    </span>
                                </td>
                            </tr>
                        }
                        @if (!Model.RecentActivities.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">No recent activities</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(MovieMart.Enums.ActivityStatus status)
    {
        return status switch
        {
            MovieMart.Enums.ActivityStatus.Success => "bg-success",
            MovieMart.Enums.ActivityStatus.Failed => "bg-danger",
            MovieMart.Enums.ActivityStatus.Pending => "bg-warning",
            MovieMart.Enums.ActivityStatus.Processing => "bg-info",
            _ => "bg-secondary"
        };
    }
}

<style>
    .dashboard-header {
        border-bottom: 1px solid rgba(0,0,0,0.1);
        padding-bottom: 1.5rem;
    }

    .stat-card {
        transition: all 0.3s ease;
        border: none;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .management-card {
        transition: all 0.3s ease;
        border-radius: 0.5rem;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .management-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .user-management-card {
        transition: all 0.3s ease;
        border-radius: 0.5rem;
        border: none;
    }

        .user-management-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .bg-dark-light {
        background-color: rgba(255,255,255,0.1) !important;
