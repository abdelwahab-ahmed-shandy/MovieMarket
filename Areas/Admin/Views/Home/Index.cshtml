                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-info bg-opacity-10 text-info border-info rounded-circle mx-auto">
                                <i class="fas fa-user-group fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">Character Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Character" class="btn btn-sm bg-info bg-opacity-10 text-info border-info border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Character/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- TV Series Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-secondary bg-opacity-10 text-secondary border-secondary rounded-circle mx-auto">
                                <i class="fas fa-tv fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">TV Series Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/TvSeries" class="btn btn-sm bg-secondary bg-opacity-10 text-secondary border-secondary border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/TvSeries/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Season Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-danger bg-opacity-10 text-danger border-danger rounded-circle mx-auto">
                                <i class="fas fa-calendar-days fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">Season Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Season" class="btn btn-sm bg-danger bg-opacity-10 text-danger border-danger border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Season/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Episode Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-indigo bg-opacity-10 text-indigo border-indigo rounded-circle mx-auto">
                                <i class="fas fa-list-ol fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">Episode Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Episode" class="btn btn-sm bg-indigo bg-opacity-20 text-indigo border-indigo border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Episode/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- User Management Section -->
