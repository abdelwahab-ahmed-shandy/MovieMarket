                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-warning bg-opacity-10 text-warning border-warning rounded-circle mx-auto">
                                <i class="fas fa-tags fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">Category Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Category" class="btn btn-sm bg-warning bg-opacity-10 text-warning border-warning border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Category/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
