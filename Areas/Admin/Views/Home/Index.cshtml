                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Movie" class="btn btn-sm bg-success bg-opacity-10 text-success border-success border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Movie/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-orange bg-opacity-10 text-orange border-orange rounded-circle mx-auto">
                                <i class="fas fa-comments fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">Reviews Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Reviews" class="btn btn-sm bg-orange bg-opacity-20 text-orange border-orange border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Reviews/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
