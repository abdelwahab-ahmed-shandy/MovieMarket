    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0">
                    <i class="fas fa-users-gear me-2 text-primary"></i>User Management
                </h5>
                <button class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-user-shield me-1"></i> Permissions
                </button>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <!-- Super Admins Card -->
                        <div class="col-xl-4 col-md-6">
                            <div class="card user-management-card bg-dark text-white h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="icon-wrapper bg-dark-light rounded-circle me-3">
                                            <i class="fas fa-crown text-warning"></i>
                                        </div>
                                        <h5 class="card-title mb-0">Super Admins</h5>
                                    </div>
                                    <p class="card-text text-muted-light mb-4">
                                        Manage all super administrators with full system access.
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="/Admin/SuperAdmins/AllSuperAdmins" class="btn btn-sm btn-outline-light">
                                            <i class="fas fa-users me-1"></i> View All
                                        </a>
                                        <a href="/Admin/SuperAdmins/Create" class="btn btn-sm btn-warning">
                                            <i class="fas fa-plus me-1"></i> Add New
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Admins Card -->
                        <div class="col-xl-4 col-md-6">
                            <div class="card user-management-card bg-primary text-white h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="icon-wrapper bg-primary-light rounded-circle me-3">
                                            <i class="fas fa-user-shield"></i>
                                        </div>
                                        <h5 class="card-title mb-0">Admins</h5>
                                    </div>
                                    <p class="card-text text-muted-light mb-4">
                                        Manage administrators with limited system access.
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="/Admin/Admins/AllAdmins" class="btn btn-sm btn-outline-light">
                                            <i class="fas fa-users me-1"></i> View All
                                        </a>
                                        <a href="/Admin/Admins/Create" class="btn btn-sm btn-light text-primary">
                                            <i class="fas fa-plus me-1"></i> Add New
                                        </a>
                                    </div>
                                </div>
                            </div>
