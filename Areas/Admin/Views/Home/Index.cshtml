@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4 mt-4">
    <!-- Header Section -->
    <div class="dashboard-header text-center mb-5">
        <h1 class="display-5 fw-bold text-primary mb-3">
            <i class="fas fa-tachometer-alt me-2"></i>@ViewData["Title"]
        </h1>
        <p class="lead text-muted">Manage all aspects of your application from this centralized control panel</p>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-primary bg-opacity-10 border-primary border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Total Users</h6>
                            <h3 class="card-title mb-0">@Model.TotalUsers</h3>
                        </div>
                        <i class="fas fa-users fa-2x text-primary opacity-25"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-primary bg-opacity-10 text-primary">+@Model.NewUsersThisMonth this month</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-success bg-opacity-10 border-success border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-film fa-2x text-success"></i>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Active Content</h6>
                            <h3 class="card-title mb-0">@(Model.TotalMovies + Model.TotalTvSeries)</h3>
                        </div>
                        <i class="fas fa-film fa-2x text-success opacity-25"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">+@Model.NewContentToday new today</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-warning bg-opacity-10 border-warning border-0 shadow-sm h-100">
                <div class="card-body">
                    <!-- Icon in header -->
                    <div class="text-center mb-3">
                        <i class="fas fa-shopping-cart fa-2x text-warning"></i>
                    </div>
                    <!-- Stats section -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Pending Orders</h6>
                            <h3 class="card-title mb-0">@Model.PendingOrders</h3>
                        </div>
                        <i class="fas fa-shopping-cart fa-2x text-warning opacity-25"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-warning bg-opacity-10 text-warning">@Model.HighPriorityOrders high priority</span>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-info bg-opacity-10 border-info border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Recent Content</h6>
                            <h3 class="card-title mb-0">@Model.NewContentToday</h3>
                        </div>
                        <i class="fas fa-plus-circle fa-2x text-info opacity-25"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-info bg-opacity-10 text-info">Today's additions</span>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-success bg-opacity-10 border-success border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Total Subscribers</h6>
                            <h3 class="card-title mb-0">@Model.TotalSubscribers</h3>
                        </div>
                        <i class="bi bi-people-fill fa-2x text-success opacity-25"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">Newsletter Subscribers</span>
                    </div>
                </div>
            </div>
        </div>



    </div>

    <!-- Content Management Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="fas fa-photo-film me-2 text-primary"></i>Content Management
            </h5>
            <button class="btn btn-sm btn-outline-primary">
                <i class="fas fa-cog me-1"></i> Settings
            </button>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <!-- Cinema Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-primary bg-opacity-10 text-primary border-primary rounded-circle mx-auto">
                                <i class="fas fa-film fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-3">Cinema Management</h5>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="/Admin/Cinema" class="btn btn-sm bg-primary bg-opacity-10 text-primary border-primary border">
                                    <i class="fas fa-cog me-1"></i> Manage
                                </a>
                                <a href="/Admin/Cinema/Create" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus me-1"></i> Create
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Movie Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card management-card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body text-center p-4">
                            <div class="icon-wrapper mb-3 bg-success bg-opacity-10 text-success border-success rounded-circle mx-auto">
                                <i class="fas fa-video fa-2x"></i>
                            </div>
